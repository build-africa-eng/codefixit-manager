[
  {
    "description": "Replace QMap::keys()",
    "match": "QMap\\s*::\\s*keys\\s*\\",
    "replace": "keyBegin(), keyEnd()"
  },
  {
    "description": "Replace QRegExp with QRegularExpression",
    "match": "\\bQRegExp\\b",
    "replace": "QRegularExpression"
  },
  {
    "description": "Convert SIGNAL to function pointer syntax",
    "match": "SIGNAL\([^)]+)\",
    "replace": "&\\1"
  },
  {
    "description": "Convert SLOT to function pointer syntax",
    "match": "SLOT\([^)]+)\",
    "replace": "&\\1"
  }
]